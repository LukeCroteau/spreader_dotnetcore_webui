@model SpreaderWeb.Models.Agents

@{
    ViewData["Title"] = "Edit Agent";
}

<h1>Edit</h1>

<h4>Agents</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Created" class="control-label"></label>
                <input asp-for="Created" class="form-control" />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Active" class="control-label"></label>
                <input asp-for="Active" class="form-control" />
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastping" class="control-label"></label>
                <input asp-for="Lastping" class="form-control" />
                <span asp-validation-for="Lastping" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Netname" class="control-label"></label>
                <input asp-for="Netname" class="form-control" />
                <span asp-validation-for="Netname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Version" class="control-label"></label>
                <input asp-for="Version" class="form-control" />
                <span asp-validation-for="Version" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpucount" class="control-label"></label>
                <input asp-for="Cpucount" class="form-control" />
                <span asp-validation-for="Cpucount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Totalmemory" class="control-label"></label>
                <input asp-for="Totalmemory" class="form-control" />
                <span asp-validation-for="Totalmemory" class="text-danger"></span>
            </div>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
            {
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
